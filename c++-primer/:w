#include <stdio.h>
#include <string.h>
#include <stdlib.h>

typedef char* string;

string s(char *sp) {
    size_t len = sizeof(*sp);
    char *temp = malloc(sizeof(char*) * len + 1);
    for (int i=0; i<len ;i++) 
        temp[i] = sp[i];

    temp[len] = '\0';
    return temp;
}


int main(void) {
    char buf[10] = "abcdefghij";

    printf("%d\n", (int)strlen(buf));

    string s1 = s("Hello strings in C"); 
    printf("%s\n", s1);

    return 0;
}
